@model IEnumerable<OmxTechNet.Models.ViewModel.ProductViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "";
}

<style>
#blog .block ul li .blog-img{
    background-color:#eee;
}
</style>
<!--
   blog start
   ============================ -->
<section id="blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block">
                      <h1 class="heading">Our <span>Products</span> And <span>Services</span></h1>
                    <ul class="service-list">

                    @foreach (var itm in Model)
                    {

                        <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="300ms">
                            <div class="blog-img" style="width:285px;height:220px;">
                                <img src="@itm.a_img" alt="blog-img" class="img-responsive">
                            </div>
                            <div class="content-right">
                                <h3 style="height:30px;overflow:hidden;"><a href="@Url.Content(@itm.a_link)" style="color:#EF038E!important;">@itm.a_title</a></h3>
                                <p style="height:100px;overflow:hidden;">@itm.a_desc</p>
                                <i class="fa fa-arrow-circle-left" style="color:#EF038E;padding:1rem;"><a href="#" style="color:#EF038E;padding:1rem;font-size:1rem;">Read More</a></i>

                            </div>
                        </li>
                    }
                  </ul>
                </div>
            </div><!-- .col-md-12 close -->
        </div><!-- .row close -->
    </div><!-- .containe close -->
</section><!-- #blog close -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
